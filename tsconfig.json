      "rootDir": "src",
      "outDir": "dist",
      "module": "es6",
      "target": "es5",
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "moduleResolution": "Node",
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
